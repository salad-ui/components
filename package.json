{
  "name": "@salad-ui/components-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    ".utilities/*",
    "packages/*",
    "playground",
    "website"
  ],
  "bolt": {
    "workspaces": [
      ".utilities/*",
      "packages/*",
      "playground",
      "website"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@changesets/cli": "^1.3.0",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.13.3",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "@types/react": "^16.9.3",
    "@types/styled-components": "^4.1.19",
    "danger": "^9.1.8",
    "eslint": "^6.2.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "jest-styled-components": "^6.3.3",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "now": "^16.1.2",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "styled-components": "^4.4.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.0"
  },
  "scripts": {
    "clean": "lerna run clean && rm -rf packages/*/dist",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,mdx}\"",
    "type": "tsc --noEmit",
    "lint": "eslint \"**/*.ts\" \"**/*.tsx\" --fix",
    "build": "lerna run build",
    "test": "jest --config .jestrc.js",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --config .jestrc.js --runInBand",
    "start:website": "yarn workspace @salad-ui/website run start",
    "start:playground": "yarn workspace @salad-ui/playground run start",
    "changeset": "changeset --commit"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,md,mdx,json}": [
      "yarn run format",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "GPL-2.0-or-later"
}
