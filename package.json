{
  "name": "design-system-example",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    ".utilities/*",
    "packages/*",
    "playground",
    "website"
  ],
  "bolt": {
    "workspaces": [
      ".utilities/*",
      "packages/*",
      "playground",
      "website"
    ]
  },
  "devDependencies": {
    "@atlaskit/build-releases": "^3.0.5",
    "@jameslnewell/editor-config": "^1.0.1",
    "@jameslnewell/eslint-config": "^0.6.1",
    "@jameslnewell/prettier-config": "^1.0.1",
    "@jameslnewell/typescript-config": "^3.0.0",
    "@testing-library/react": "^9.1.3",
    "@types/jest": "^24.0.18",
    "danger": "^9.1.8",
    "eslint": "^6.2.1",
    "husky": "^3.0.4",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "lint-staged": "^9.2.3",
    "now": "^16.1.2",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type": "tsc --noEmit",
    "lint": "eslint \"**/*.ts\" \"**/*.tsx\" --fix",
    "test": "jest --config .jestrc.js",
    "build": "lerna run build",
    "changeset": "build-releases changeset",
    "start:website": "yarn workspace @design-system-example/website run start",
    "start:playground": "yarn workspace @design-system-example/playground run start"
  },
  "lint-staged": {
    "**/*.{json,md}": [
      "yarn run format",
      "git add"
    ],
    "**/*.{ts,tsx}": [
      "yarn run format",
      "yarn run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "MIT"
}
